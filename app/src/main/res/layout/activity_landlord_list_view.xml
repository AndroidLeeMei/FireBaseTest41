<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kevin.firebasetest4.LandlordListView">

    <TextView
        android:id="@+id/txtlandlord"
        android:layout_width="203dp"
        android:layout_height="28dp"
        android:layout_marginLeft="16dp"

        android:layout_marginTop="12dp"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toRightOf="@+id/txtlandlord"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_input_add"
        android:onClick="addHouse"/>

    <ListView
        android:id="@+id/list"
        android:layout_width="320dp"
        android:layout_height="409dp"
        android:layout_marginLeft="8dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@+id/txtlandlord"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtlandlord" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="314dp"
        android:layout_height="21dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="付費廣告區"
        app:layout_constraintLeft_toLeftOf="@+id/list"
        app:layout_constraintTop_toBottomOf="@+id/list" />

</android.support.constraint.ConstraintLayout>
