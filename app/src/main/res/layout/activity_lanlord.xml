<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kevin.firebasetest4.LanlordActivity">

    <ImageView
        android:id="@+id/imgAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_input_add"
        android:onClick="addHouse"
        app:layout_constraintLeft_toRightOf="@+id/txtlandlord"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="355dp"
        android:layout_height="37dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="付費廣告區"
        app:layout_constraintLeft_toLeftOf="@+id/list"
        app:layout_constraintTop_toBottomOf="@+id/list" />

    <TextView
        android:id="@+id/txtlandlord"
        android:layout_width="318dp"
        android:layout_height="56dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/colorActivatedHighlight"

        android:textColor="@android:color/background_light"
        android:textSize="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/list"
        android:layout_width="360dp"
        android:layout_height="364dp"
        android:layout_marginLeft="-9dp"
        android:layout_marginTop="9dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@+id/txtlandlord"
        app:layout_constraintTop_toBottomOf="@+id/txtlandlord" />
</android.support.constraint.ConstraintLayout>
