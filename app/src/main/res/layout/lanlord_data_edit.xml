<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kevin.firebasetest4.LanlordDataEdit">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="16dp"
        android:gravity="bottom"
        android:text="姓名"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="bottom"
        android:text="E-MAIL"
        android:textSize="25dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView23"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView23"
        android:enabled="true"/>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="bottom"
        android:text="手機號碼"
        android:textSize="25dp"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="bottom"
        android:text="房客匯入資料時的驗證密碼"
        android:textSize="25dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView26"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView26" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="bottom"
        android:textSize="25dp"
        android:text="房客繳房租的匯款帳號"
        android:layout_marginLeft="-1dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView20"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/edtPhone" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="bottom"
        android:text="登入密碼"
        android:textSize="25dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView7" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="200dp"

        android:layout_marginLeft="58dp"
        android:layout_marginTop="16dp"
        android:ems="6"
        android:gravity="bottom"

        style="@style/lanlord_detail_data"
        android:focusable="false"
        android:text="由login帶入"
        app:layout_constraintLeft_toRightOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtPassWord1"
        style="@style/lanlord_detail_data"

        android:layout_width="200dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-5dp"
        android:ems="10"
        android:focusable="false"

        android:text="由login帶入"

        app:layout_constraintLeft_toRightOf="@+id/textView23"
        app:layout_constraintTop_toBottomOf="@+id/edtName" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@+id/textView15"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp" />

    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName|number"
        app:layout_constraintLeft_toRightOf="@+id/textView20"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="170dp" />

    <EditText
        android:id="@+id/edtBank"
        android:layout_width="152dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:textSize="25dp"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@+id/textView24"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="93dp"
        android:layout_height="40dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="0dp"
        android:textSize="25dp"
        android:text="銀行"
        app:layout_constraintLeft_toLeftOf="@+id/textView22"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="93dp"
        android:layout_height="40dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="0dp"
        android:text="代號"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView24"
        app:layout_constraintTop_toBottomOf="@+id/textView24" />

    <EditText
        android:id="@+id/edtBankNumber"
        android:layout_width="102dp"
        android:layout_height="40dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:ems="3"
        android:inputType="textPersonName"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="@+id/edtBank"
        app:layout_constraintTop_toBottomOf="@+id/edtBank" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="94dp"
        android:layout_height="40dp"
        android:textSize="25dp"
        android:text="帳號"
        android:layout_marginLeft="-1dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView25"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />

    <EditText
        android:id="@+id/edtPassWord"
        android:layout_width="243dp"
        android:layout_height="40dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:textSize="25dp"
        android:inputType="textPersonName|number"
        app:layout_constraintLeft_toLeftOf="@+id/textView21"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <Button
        android:id="@+id/button13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="確定"
        android:textSize="25dp"
        android:onClick="btnSubmit"
        app:layout_constraintLeft_toLeftOf="@+id/edtPassWord"
        app:layout_constraintTop_toBottomOf="@+id/edtPassWord" />

    <Button
        android:id="@+id/button14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="0dp"
        android:text="取消"
        android:textSize="25dp"
        android:onClick="btnCancel"
        app:layout_constraintLeft_toRightOf="@+id/button13"
        app:layout_constraintTop_toBottomOf="@+id/edtPassWord" />

    <EditText
        android:id="@+id/edtAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="-4dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/edtBankNumber"
        app:layout_constraintTop_toBottomOf="@+id/edtBankNumber" />

</android.support.constraint.ConstraintLayout>
